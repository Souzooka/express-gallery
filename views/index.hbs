This is the index page.

{{#each picture}} {{!-- iterates over the array of books --}}
  <div class="picture">
    <h1>Author: {{author}}</h1>
    <h2>Link: {{link}}</h2>
    <h2>Description: {{description}}</h2>
  </div>
  <form action="/picture/{{id}}/edit" method="GET" >
   <input type="submit" value="Edit Product">
</form>
<form action="/picture/{{id}}?_method=DELETE" method="POST" >
   <input type="submit" value="Remove Picture">
</form>

{{/each}}
<form action="/picture/new" method="GET" >
   <input type="submit" value="New product">
</form>